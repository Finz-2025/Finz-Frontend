{
  "extends": "@react-native/typescript-config",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "~assets/*": ["assets/*"]
    },
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": ["src/**/*", "index.ts", "index.tsx"],
  "exclude": ["**/node_modules", "**/Pods"]
}
